generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_PATH")
}

model Users {
  id               Int      @id @unique @default(autoincrement())
  email            String   @unique
  password         String
  first_name       String
  last_name        String
  dob              String
  last_logon       DateTime @default(now())
  permission_level Int      @default(0)
  groups           Groups[]
}

model Groups {
  id    Int     @id @unique @default(autoincrement())
  name  String
  users Users[]
}